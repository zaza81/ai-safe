{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resource Access Control Schema",
  "type": "object",
  "properties": {
    "disallowed-resources": {
      "type": "array",
      "items": { "$ref": "#/definitions/resource" }
    },
    "allowed-resources": {
      "type": "array",
      "items": { "$ref": "#/definitions/resource" }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "resource": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Link to the resource"
        },
        "type": {
          "type": "string",
          "enum": ["text", "video", "image", "audio", "code", "dataset", "document", "other"],
          "description": "Type of the resource"
        },
        "license": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "commercial", 
                "open-source", 
                "open-weights",
                "Apache-2.0", 
                "MIT", 
                "GPL", 
                "BSD", 
                "CC0", 
                "CC BY", 
                "CC BY-SA", 
                "CC BY-NC", 
                "CC BY-ND", 
                "proprietary", 
                "trial", 
                "EULA", 
                "OpenRAIL"
              ],              
              "description": "Type of license"
            },
            "restrictions": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Specific restrictions associated with the license"
            }
          },
          "required": ["type"],
          "additionalProperties": false
        },
        "region": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Geographic regions where the resource is available"
        },
        "countries": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Specific countries within the regions where the resource is available"
        },
        "sitemap": {
          "type": "string",
          "format": "uri",
          "description": "Optional sitemap URL"
        },
        "user-agent": {
          "type": "string",
          "enum": [
            "AdsBot-Google",
            "Amazonbot",
            "anthropic-ai",
            "Applebot-Extended",
            "Bytespider",
            "CCBot",
            "ChatGPT-User",
            "ClaudeBot",
            "Claude-Web",
            "cohere-ai",
            "Diffbot",
            "FacebookBot",
            "FriendlyCrawler",
            "Google-Extended",
            "GoogleOther",
            "GPTBot",
            "img2dataset",
            "omgili",
            "omgilibot",
            "peer39_crawler",
            "peer39_crawler/1.0",
            "PerplexityBot",
            "YouBot"
          ],
          "description": "User-agent choosing from the list"
        }
      },
      "required": ["url", "type"],
      "additionalProperties": false
    }
  }
}
