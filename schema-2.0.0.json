{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Resource Access Control Schema",
    "type": "object",
    "properties": {
      "disallowed-resources": {
        "type": "array",
        "items": { "$ref": "#/definitions/resource" }
      },
      "allowed-resources": {
        "type": "array",
        "items": { "$ref": "#/definitions/resource" }
      }
  
    },
    "required": ["disallowed-resources"],
    "additionalProperties": false,
    "definitions": {
      "resource": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Link to the resource"
          },
          "type": {
            "type": "string",
            "enum": ["*", "text", "video", "image", "audio", "code", "dataset", "document", "other"],
            "description": "Type of the resource"
          },
          "license": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["*", "commercial", "open-source", "open-weights"],
                "description": "Type of license"
              },
              "restrictions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Specific restrictions associated with the license"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          "region": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Geographic regions where the resource is available"
          },
          "countries": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Specific countries within the regions where the resource is available"
          }
        },
        "required": ["url", "type"],
        "additionalProperties": false
      }
    }
  }